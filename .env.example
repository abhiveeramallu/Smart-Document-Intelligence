# =====================================
# Smart Document Intelligence Platform
# Environment Configuration Template
# =====================================

# Copy this file to .env and update values
# DO NOT commit .env to version control

# =====================================
# Application Settings
# =====================================
APP_NAME=Smart Document Intelligence
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =====================================
# Backend Configuration
# =====================================
# Data directory inside container
DOC_INTEL_DATA_DIR=/app/backend/data

# Maximum upload size in bytes (default: 35MB)
MAX_UPLOAD_BYTES=36700160

# =====================================
# Ollama AI Configuration
# =====================================
# Internal Docker network URL (don't change)
OLLAMA_BASE_URL=http://ollama:11434

# Default LLM model
OLLAMA_MODEL=llama3.2:3b

# Vision model for OCR (optional)
OLLAMA_VISION_MODEL=llava

# Keep model loaded in memory (seconds)
OLLAMA_KEEP_ALIVE=86400

# =====================================
# Frontend Configuration
# =====================================
# API base URL (relative for Nginx proxy)
VITE_API_BASE=/api

# =====================================
# Database (SQLite)
# =====================================
# Automatically configured via DATA_DIR
# DB_PATH=/app/backend/data/document_intel.db

# =====================================
# Security
# =====================================
# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =====================================
# SSL/HTTPS
# =====================================
# Domain for SSL certificate
DOMAIN=yourdomain.com

# Email for Let's Encrypt notifications
SSL_EMAIL=admin@yourdomain.com

# =====================================
# Server Configuration
# =====================================
# Backend port (internal only)
BACKEND_PORT=8000

# Frontend port (internal only)
FRONTEND_PORT=80

# Nginx ports (external)
HTTP_PORT=80
HTTPS_PORT=443

# =====================================
# Docker Configuration
# =====================================
# Container resource limits
BACKEND_MEMORY_LIMIT=2g
BACKEND_CPU_LIMIT=2
OLLAMA_MEMORY_LIMIT=8g
OLLAMA_CPU_LIMIT=4

# =====================================
# Backup Configuration
# =====================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily
BACKUP_REMOTE_SYNC=false
# BACKUP_S3_BUCKET=your-backup-bucket
# BACKUP_S3_REGION=us-east-1
